 x = 0
score = x
 
print("Ile to 1 + 1")
answer_1 = input("a)1\nb)2\nc)3\nd)4\n:")
if answer_1.lower() == "b" or answer_1.lower() == "2":
    print("Correct")
    x = x + 1   
else:
    print("Incorrect, 1 + 1 is 2")

print("Kto jest 45.Prezydentem Stanów zjednoczonych?")
answer_2 = input("a)Barack Obama\nb)Hillary Clinton\nc)Donald Trump\nd)Tom Brady\n:")
if answer_2.lower() == "c" or answer_2.lower() == "donald trump":
    print("Correct")
    x = x + 1
else:
    print("Niepoprawne, 45 prezydentem jest Donald Trump")

print("True or False... Mieszko pirwszy był pierwszym władcom polski ?")
answer_3 = input(":")
if answer_3.lower() == "true" or answer_3.lower() == "t":
    print("Correct")
    x = x + 1
else:
    print("Niepoprawne")  

print("w którym roku Polska odzyskała niepodległość ?")
answer_4 = input("a)1918\nb)1955\nc)1987\nd)1994\n:")
if answer_4.lower() == "a" or answer_4 == "1918":
    print("Correct")
    x = x + 1
else:
    print("Niepoprawne, Polska odzyskała nie podległość w 1918")
 
print("True or False... Obecnym prezydnetem Polski jest Lech Kaczyński?")
answer_5 = input(":")
if answer_5.lower() == "false" or answer_5.lower() == "f":
    print("Correct")
    x = x + 1
else:
    print("Niepoprawne, Obecnym prezydentem Polski jest Andzej Duda")


score = float(x / 5) * 100
print(x,"out of 5, that is",score, "%")
